<Label Text="YOUR BALANCE"
       TextColor="@(Color.FromHex("718096"))"
       HorizontalTextAlignment="TextAlignment.Center"
       HorizontalOptions="LayoutOptions.FillAndExpand" />
<Label Text="@($"{CurrentBalance.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-GB"))}")"
       TextColor="@(Color.FromHex("2D3748"))"
       FontSize="30"
       VerticalTextAlignment="TextAlignment.Center"
       HorizontalTextAlignment="TextAlignment.Center" />

<Label Text="BUDGET"
       FontSize="12"
       TextColor="@(Color.FromHex("718096"))"
       HorizontalOptions="LayoutOptions.FillAndExpand" />
<Label Text="@($"{Budget.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-GB"))}")"
       TextColor="@(Color.FromHex("38A169"))"
       FontSize="20"
       VerticalTextAlignment="TextAlignment.Center"
       HorizontalTextAlignment="TextAlignment.Center" />

<Label Text="EXPENSES"
       FontSize="12"
       TextColor="@(Color.FromHex("718096"))"
       HorizontalOptions="LayoutOptions.FillAndExpand" />
<Label Text="@($"{TotalExpenses.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-GB"))}")"
       TextColor="@(Color.FromHex("E53E3E"))"
       FontSize="20"
       VerticalTextAlignment="TextAlignment.Center"
       HorizontalTextAlignment="TextAlignment.Center" />

@code {
    [Parameter] public decimal Budget { get; set; }
    [Parameter] public decimal CurrentBalance { get; set; }
    [Parameter] public decimal TotalExpenses { get; set; }
}